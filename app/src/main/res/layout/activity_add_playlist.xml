<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlaylist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/album_linear"
        android:layout_margin="10dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add_video"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/playlistImage"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/addPlaylistImg"
            android:layout_gravity="center_horizontal"
            android:text="Add thumbnail"
            android:background="#ED5656"
            android:textColor="@color/colorPrimaryDark"
            android:padding="7dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Playlist Name"
            android:inputType="textPersonName"
            android:background="@drawable/editextstyle"
            android:padding="10dp"
            android:id="@+id/playlistName"
            android:layout_marginTop="7dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Playlist Description"
            android:inputType="textMultiLine"
            android:maxLength="60"
            android:background="@drawable/editextstyle"
            android:padding="10dp"
            android:id="@+id/playlistDesc"
            android:layout_marginTop="15dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add Videos to playlist"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/postPlaylistBtn"
            android:textColor="@color/colorPrimaryDark"
            android:background="#006699"/>

    </LinearLayout>


</RelativeLayout>