<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LibraryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently played"
        android:textSize="18sp"
        android:textColor="@color/gnt_black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/recentPlayedVideos"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/channelRelative">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_home"
            android:id="@+id/home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Channel"
            android:id="@+id/myChannel"
            android:textSize="20sp"
            android:layout_toEndOf="@id/home"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/home" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/videosRelatve">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_explore"
            android:id="@+id/explore"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Videos"
            android:id="@+id/myVideos"
            android:textSize="20sp"
            android:layout_toEndOf="@id/explore"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/explore" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_download"
            android:layout_centerVertical="true"
            android:id="@+id/Download"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:id="@+id/downloads"
            android:textSize="20sp"
            android:layout_toEndOf="@id/Download"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/Download" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_notifications"
            android:layout_centerVertical="true"
            android:id="@+id/myWatchLater"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Later"
            android:id="@+id/watchLater"
            android:textSize="20sp"
            android:layout_toEndOf="@id/myWatchLater"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/myWatchLater" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_centerVertical="true"
            android:id="@+id/settingsImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/settings"
            android:textSize="20sp"
            android:layout_toEndOf="@id/settingsImage"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/settingsImage" />

    </RelativeLayout>

</LinearLayout>